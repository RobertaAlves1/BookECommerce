@{
    ViewData["Title"] = "Resumo";
}

@model Request;

<h2>Resumo do Pedido</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>N° do Pedido: @(Model.ID)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados:</h3>
                <div>@Model.Register.Name</div>
                <div>@Model.Register.Phone</div>
            </div>
            <div class="col-md-3">
                @Model.Register.Email
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega:</h3>
                <div>@Model.Register.Address, @Model.Register.Supplement -
                @Model.Register.Neighborhood - CEP: @Model.Register.ZipCode -
                @Model.Register.City, @Model.Register.FederatedUnit - Brasil
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-10">
                    <h3>Item</h3>
                </div>
                <div class="col-md-2">
                    <h3>Quantidade</h3>
                </div>
            </div>

            @foreach (var item in Model.Items)
            {
                <div class="row">
                    <div class="col-md-10">
                        <div>@item.Product.Name</div>
                    </div>
                    <div class="col-md-2">
                        <div class="pull-right">@item.Amount</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

